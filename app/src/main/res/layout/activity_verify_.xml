<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verify_Activity">

    <ImageView

        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginTop="20dp"
        android:src="@drawable/callpay_logo_dark"
        />
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter One Time Password sent on your registered mobile no"
        android:gravity="center"
        android:layout_below="@+id/logo"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:text="Enter OTP"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"/>
    <LinearLayout
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/otp"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_lock_outline_black_24dp"
            android:tint="@color/colorPrimaryDark"
            android:gravity="center"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/otpET1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/otpET2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="1"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/otpET3"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:maxLength="1"

            android:gravity="center"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/otpET4"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/otpET5"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/otpET6"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="20sp"/>
    </LinearLayout>



    <Button
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv1"
        android:text="Verify"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="45dp"

        android:background="@drawable/round_cornel" />


    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify"
        android:layout_marginLeft="25dp"
        android:gravity="center"

        android:text="Want to send again verification code ?"
        android:textColor="@color/black"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tryagain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"

        android:layout_marginTop="10dp"
android:gravity="center"
        android:text="Try again"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tryagain"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Try again"
        android:alpha="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold" />
</RelativeLayout>